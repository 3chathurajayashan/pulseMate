<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="88dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- BMI Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bmiCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/bmiTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your BMI"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#5B67CA"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/bmiValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E2D"
                        android:fontFamily="sans-serif-light"
                        app:layout_constraintTop_toBottomOf="@id/bmiTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/bmiSuggestion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Your health status will appear here"
                        android:textSize="18sp"
                        android:textColor="#6C757D"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/bmiValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Goals Title -->
            <TextView
                android:id="@+id/dailyGoalsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Goals"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1E1E2D"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                app:layout_constraintTop_toBottomOf="@id/bmiCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"/>

            <!-- Water Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/waterCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E8F4F8"
                app:layout_constraintTop_toBottomOf="@id/dailyGoalsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/suggestedWaterText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water: â€” L"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4FC3F7"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <ProgressBar
                        android:id="@+id/waterProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:progress="0"
                        android:progressTint="#4FC3F7"
                        android:progressBackgroundTint="#E3F2FD"
                        android:indeterminateTint="#4FC3F7"
                        app:layout_constraintTop_toBottomOf="@id/suggestedWaterText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <Button
                        android:id="@+id/addWaterBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add 250ml Water"
                        android:backgroundTint="#4FC3F7"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        android:elevation="2dp"
                        app:cornerRadius="12dp"
                        app:layout_constraintTop_toBottomOf="@id/waterProgress"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/waterHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Long press button to change cup size"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:fontFamily="sans-serif"
                        app:layout_constraintTop_toBottomOf="@id/addWaterBtn"
                        app:layout_constraintStart_toStartOf="@id/addWaterBtn"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/reminderLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder Interval"
                        android:textSize="14sp"
                        android:textColor="#6C757D"
                        android:fontFamily="sans-serif-medium"
                        app:layout_constraintTop_toBottomOf="@id/waterHint"
                        app:layout_constraintStart_toStartOf="@id/waterHint"
                        android:layout_marginTop="12dp"/>

                    <NumberPicker
                        android:id="@+id/reminderIntervalPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/reminderLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="4dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Steps Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/stepsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#FFF4E6"
                app:layout_constraintTop_toBottomOf="@id/waterCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Daily Steps"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="28sp"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/stepsCircularProgress"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:indicatorSize="150dp"
                            app:trackThickness="12dp"
                            app:indicatorColor="#FF9800"
                            app:trackColor="#F5F5F5"
                            android:progress="0"
                            android:max="100"
                            app:showAnimationBehavior="outward"
                            app:hideAnimationBehavior="none"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/stepsProgressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 10000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="steps"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/stepsStatsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distance: 0 km | Steps: 0"
                                android:textSize="16sp"
                                android:textColor="#6C757D"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startStopWalkingBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Start Walking"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        android:elevation="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mood Selector Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/moodCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#FFE4F1"
                app:layout_constraintTop_toBottomOf="@id/stepsCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How are you feeling today?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E1E2D"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp"/>

                    <!-- Emoji Buttons -->
                    <LinearLayout
                        android:id="@+id/emojiLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/emojiHappy"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/emoji_happy"
                            android:padding="4dp"
                            android:alpha="0.5"/>

                        <ImageView
                            android:id="@+id/emojiSad"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/emoji_sad"
                            android:padding="4dp"
                            android:alpha="0.5"/>

                        <ImageView
                            android:id="@+id/emojiAngry"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/emoji_angry"
                            android:padding="4dp"
                            android:alpha="0.5"/>

                        <ImageView
                            android:id="@+id/emojiNeutral"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/emoji_natural"
                            android:padding="4dp"
                            android:alpha="0.5"/>

                        <ImageView
                            android:id="@+id/emojiExcited"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/emoji_excited"
                            android:padding="4dp"
                            android:alpha="0.5"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/moodNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write your mood notes..."
                        android:inputType="textMultiLine"
                        android:background="@drawable/rounded_edittext"
                        android:fontFamily="sans-serif"
                        android:textColor="#1E1E2D"
                        android:textColorHint="#9E9E9E"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveMoodBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Save Mood"
                        android:backgroundTint="#EC407A"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/suggestionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#00796B"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewPastMoodsBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="View Past Moods"
                        android:backgroundTint="#F8BBD0"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        android:layout_marginBottom="8dp"/>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        android:background="#FF0436"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
