<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onBoardScreen2">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/w"
        android:scaleType="centerCrop"
        android:contentDescription="Background Image"/>

    <!-- Bottom White Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/white_sheet_rounded"
        android:padding="24dp"
        android:elevation="8dp"
        android:clipToOutline="true"
        android:gravity="center"
        android:fitsSystemWindows="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Heading -->
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay Hydrated with Pulse "
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"/>

        <!-- Paragraph -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage your health daily with personalized tips and tracking. Let's start your wellness journey!"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp"/>

        <!-- Next Button Full Width -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="#3eacff"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
