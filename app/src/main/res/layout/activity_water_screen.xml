<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <!-- Daily Water Circular Progress -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circularProgress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:indicatorSize="150dp"
                        app:trackThickness="12dp"
                        app:indicatorColor="#0096FF"
                        app:trackColor="#D0D0D0"
                        android:progress="0"
                        android:max="100"
                        app:showAnimationBehavior="outward"
                        app:hideAnimationBehavior="none" />

                    <!-- Water Progress Text inside circle -->
                    <TextView
                        android:id="@+id/waterProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 2000 ml"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#0096FF"
                        android:layout_gravity="center" />
                </FrameLayout>

                <!-- Add Water Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addWaterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Add 250 ml Water"
                    android:backgroundTint="#0096FF"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp" />

                <!-- Daily Stats -->
                <TextView
                    android:id="@+id/dailyStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consumed: 0 ml | Remaining: 2000 ml"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Cards Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/infoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <!-- Daily Rating with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="#FFF9E6">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/throphy"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/dailyRating"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today's Rating: Excellent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- 7-Day Average -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calender"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/avgIntakeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7-Day Avg: 1800 ml"
                        android:textSize="16sp"
                        android:textColor="#555555" />
                </LinearLayout>

                <!-- Compared to Yesterday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_increase"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/comparedYesterdayText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+200 ml more than yesterday"
                        android:textSize="16sp"
                        android:textColor="#555555" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weekly Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chartCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/infoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <!-- Weekly Chart Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chart"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/weeklyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Water Intake"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <!-- Weekly Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/weeklyChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
